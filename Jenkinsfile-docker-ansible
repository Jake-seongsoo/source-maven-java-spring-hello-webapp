pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/Jake-seongsoo/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-11' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent any
      steps {
        sh 'docker image build -t myansible .'
      }
    }
    stage('Tag Docker Image') {
      agent any
      steps {
        sh 'docker image tag myhello seongsoo/myansible:$BUILD_NUMBER'
        sh 'docker image tag myhello seongsoo/myansible:latest'
      }
    }
    stage('Publish Docker Image') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker image push seongsoo/myansible:$BUILD_NUMBER'
          sh 'docker image push seongsoo/myansible:latest'
        }
      }
    }
    stage('Run Docker Container') {
      agent {
        docker { 
          image 'seongsoo/jenkins_ansible'
          args '-u 0:0 -e DOCKER_HOST=tcp://172.31.22.116:2375'
        }
      }
      steps {
        ansiblePlaybook(playbook: 'docker-container-deploy.yaml')
      }
    }
  }
}
